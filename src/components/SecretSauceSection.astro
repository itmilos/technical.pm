---
const secretSauce = [
	{ title: 'Hands-on Approach', description: 'Direct involvement in your projects' },
	{ title: 'Dedication', description: 'Unwavering commitment to success' },
	{ title: 'Employee Impersonation', description: 'Integrating seamlessly with your team' },
	{ title: 'Result-Oriented', description: 'Focus on measurable outcomes' },
	{ title: 'Attention to Detail', description: 'Precision in every aspect' },
	{ title: 'Unorthodox Approach', description: 'Creative problem-solving methods' },
	{ title: 'Genuine Care', description: 'Authentic concern for your success' },
	{ title: 'Outside-the-Box Thinking', description: 'Innovative solutions beyond conventional wisdom' }
];
---

<!-- Secret Sauce Section -->
<section id="approach" class="container mx-auto px-4 mb-16 sm:mb-20 max-w-6xl relative z-10">
	<h2 class="text-2xl sm:text-3xl font-semibold mb-8 text-center hover:text-royal-purple-600 transition-colors duration-200 cursor-default">Our Secret Sauce</h2>
	<div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
		{secretSauce.map((item) => (
			<div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-lg p-4 hover:bg-white/15 hover:border-white/30 transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl">
				<h3 class="font-semibold mb-2 text-sm text-pale-blush-50 font-accent">{item.title}</h3>
				<p class="text-pale-blush-100 text-xs leading-relaxed font-primary">{item.description}</p>
			</div>
		))}
	</div>
</section> 