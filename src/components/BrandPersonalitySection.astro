---
const brandPersonality = [
	{ axis: 'Elite vs Mass Appeal', position: 80, leftBrand: 'Chanel', rightBrand: 'H&M', leftIcon: '👑', rightIcon: '🏪' },
	{ axis: 'Serious vs Playful', position: 85, leftBrand: 'SAP', rightBrand: 'Google', leftIcon: '💼', rightIcon: '🎨' },
	{ axis: 'Conventional vs Rebel', position: 80, leftBrand: 'Honda', rightBrand: 'Tesla', leftIcon: '🏛️', rightIcon: '⚡' },
	{ axis: 'Friend vs Authority', position: 65, leftBrand: 'Disney', rightBrand: 'New York Times', leftIcon: '🤝', rightIcon: '📰' },
	{ axis: 'Mature vs Innovative', position: 50, leftBrand: 'Hilton', rightBrand: 'Airbnb', leftIcon: '🏨', rightIcon: '🏠' }
];
---

<!-- Brand Personality Section -->
<section id="personality" class="container mx-auto px-4 mb-16 sm:mb-20 max-w-6xl relative z-10">
	<h2 class="text-2xl sm:text-3xl font-semibold mb-8 text-center hover:text-royal-purple-600 transition-colors duration-200 cursor-default">Brand Personality</h2>
	<div class="glass-card rounded-lg p-8">
		<div class="space-y-8">
			{brandPersonality.map((trait) => (
				<div class="space-y-3">
					<div class="flex justify-between items-center text-sm text-pale-blush-50">
						<div class="flex items-center space-x-2">
							<span class="text-lg">{trait.leftIcon}</span>
							<span class="font-medium font-primary">{trait.leftBrand}</span>
						</div>
						<div class="flex items-center space-x-2">
							<span class="font-medium font-primary">{trait.rightBrand}</span>
							<span class="text-lg">{trait.rightIcon}</span>
						</div>
					</div>
					<div class="relative">
						<div class="w-full h-2 bg-pale-blush-200 rounded-full">
							<div 
								class="h-2 bg-gradient-to-r from-royal-purple-600 to-electric-lavender-500 rounded-full transition-all duration-300"
								style={`width: ${trait.position}%`}
							></div>
						</div>
						<div 
							class="absolute top-1/2 transform -translate-y-1/2 w-4 h-4 bg-royal-purple-600 rounded-full border-2 border-white shadow-lg"
							style={`left: calc(${trait.position}% - 8px)`}
						></div>
					</div>
					<div class="text-center text-xs text-pale-blush-100 font-medium font-primary">
						{trait.axis}
					</div>
				</div>
			))}
		</div>
	</div>
</section> 