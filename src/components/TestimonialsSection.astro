---
interface Testimonial {
  initials: string;
  name: string;
  role: string;
  text: string;
  date: string;
}

interface Props {
  testimonials: Testimonial[];
}

const { testimonials } = Astro.props;
---

<section id="testimonials" class="mb-20 px-4">
  <h2 class="text-3xl font-semibold mb-8 text-center transition-colors duration-200 cursor-default" style="color: var(--text-primary);">What Others Say</h2>
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
    {testimonials.map((testimonial) => (
      <div class="glass-card p-6 rounded-lg group flex flex-col min-h-[260px]">
        <div class="flex items-center mb-4">
          <div class="w-12 h-12 rounded-full flex items-center justify-center font-bold text-xl transition-transform duration-300" style="background: var(--accent-tertiary); color: var(--accent-primary);">
            {testimonial.initials}
          </div>
          <div class="ml-4">
            <h3 class="font-semibold transition-colors duration-200" style="color: var(--text-primary);">{testimonial.name}</h3>
            <p class="text-sm transition-colors duration-200" style="color: var(--text-secondary);">{testimonial.role}</p>
          </div>
        </div>
        <p class="transition-colors duration-200 text-pretty -indent-2" style="color: var(--text-secondary);">{testimonial.text}</p>
        <div class="flex-1"></div>
        <p class="text-sm mt-4 transition-colors duration-200" style="color: var(--text-tertiary);">{testimonial.date}</p>
      </div>
    ))}
  </div>
</section> 