---
interface Testimonial {
  initials: string;
  name: string;
  role: string;
  text: string;
  date: string;
}

interface Props {
  testimonials: Testimonial[];
}

const { testimonials } = Astro.props;
---

<section id="testimonials" class="mb-20 px-4">
  <h2 class="text-3xl font-semibold mb-8 text-center hover:text-royal-purple-600 transition-colors duration-200 cursor-default">What Others Say</h2>
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
    {testimonials.map((testimonial) => (
      <div class="glass-card p-6 rounded-lg group flex flex-col min-h-[260px]">
                  <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-royal-purple-600/20 backdrop-blur-sm rounded-full flex items-center justify-center text-royal-purple-300 font-bold text-xl group-hover:scale-110 transition-transform duration-300">
              {testimonial.initials}
            </div>
            <div class="ml-4">
              <h3 class="font-semibold text-pale-blush-50 group-hover:text-royal-purple-600 transition-colors duration-200">{testimonial.name}</h3>
              <p class="text-sm text-pale-blush-200 group-hover:text-pale-blush-50 transition-colors duration-200">{testimonial.role}</p>
            </div>
          </div>
        <p class="text-pale-blush-100 italic group-hover:text-royal-purple-300 transition-colors duration-200 text-pretty -indent-2">{testimonial.text}</p>
        <div class="flex-1"></div>
        <p class="text-sm text-pale-blush-300 mt-4 group-hover:text-pale-blush-100 transition-colors duration-200">{testimonial.date}</p>
      </div>
    ))}
  </div>
</section> 