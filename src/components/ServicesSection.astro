---
const coreServices = [
	'IT Consulting',
	'Operations Optimization for IT Companies',
	'Business Efficiency Enhancement',
	'Vendor Connection & Management',
	'Cost Saving Opportunity Identification',
	'Business Experience Improvement',
	'Strategic Talent Acquisition'
];
---

<!-- What We Do Section -->
<section id="services" class="container mx-auto px-4 mb-16 sm:mb-20 max-w-6xl relative z-10">
	<h2 class="text-2xl sm:text-3xl font-semibold mb-8 text-center hover:text-royal-purple-600 transition-colors duration-200 cursor-default">What We Do</h2>
			<div class="glass-card rounded-lg p-8">
		<div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
			{coreServices.map((service) => (
				<div class="flex items-center space-x-3 p-3 rounded-lg hover:bg-electric-lavender-500/10 transition-colors duration-200">
					<div class="w-2 h-2 bg-royal-purple-600 rounded-full flex-shrink-0"></div>
					<span class="text-sm text-pale-blush-50 font-primary">{service}</span>
				</div>
			))}
		</div>
	</div>
</section> 