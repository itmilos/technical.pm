---
interface Props {
  technicalSkills: string[];
  softSkills: string[];
}

const { technicalSkills, softSkills } = Astro.props;
---

<section id="skills" class="mb-20 px-4">
  <h2 class="text-3xl font-semibold mb-8 text-center hover:text-royal-purple-600 transition-colors duration-200 cursor-default">Core Competencies</h2>
  <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
    <div class="glass-card p-6 rounded-lg group">
      <h3 class="font-semibold mb-4 text-pale-blush-50 group-hover:text-royal-purple-600 transition-colors duration-200">Technical</h3>
      <div class="flex flex-wrap gap-2">
        {technicalSkills.map((skill) => (
          <span 
            class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium
                   bg-royal-purple-600/20 text-royal-purple-300
                   hover:bg-royal-purple-600/30 hover:scale-105
                   transition-all duration-200 cursor-default
                   border border-royal-purple-600/30
                   backdrop-blur-sm"
          >
            {skill}
          </span>
        ))}
      </div>
    </div>
    <div class="glass-card p-6 rounded-lg group">
      <h3 class="font-semibold mb-4 text-pale-blush-50 group-hover:text-royal-purple-600 transition-colors duration-200">Soft Skills</h3>
      <div class="flex flex-wrap gap-2">
        {softSkills.map((skill) => (
          <span 
            class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium
                   bg-royal-purple-600/20 text-royal-purple-300
                   hover:bg-royal-purple-600/30 hover:scale-105
                   transition-all duration-200 cursor-default
                   border border-royal-purple-600/30
                   backdrop-blur-sm"
          >
            {skill}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  /* Add a subtle glow effect on hover */
  span:hover {
    box-shadow: 0 0 15px rgba(var(--primary), 0.2);
  }
</style> 