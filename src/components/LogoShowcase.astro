---
import Logo from './Logo.astro';
---

<!-- Logo Showcase Section -->
<section class="container mx-auto px-4 py-16 max-w-4xl">
  <h2 class="text-2xl font-semibold mb-8 text-center text-pale-blush-50 font-accent">Logo Variants</h2>
  
  <div class="space-y-12">
    <!-- Default Variant -->
    <div class="glass-card rounded-lg p-8">
      <h3 class="text-lg font-semibold mb-4 text-electric-lavender-500 font-accent">Default Variant</h3>
      <div class="flex flex-wrap items-center gap-8 justify-center">
        <div class="text-center">
          <p class="text-sm text-pale-blush-300 mb-2 font-primary">Small</p>
          <Logo size="sm" />
        </div>
        <div class="text-center">
          <p class="text-sm text-pale-blush-300 mb-2 font-primary">Medium</p>
          <Logo size="md" />
        </div>
        <div class="text-center">
          <p class="text-sm text-pale-blush-300 mb-2 font-primary">Large</p>
          <Logo size="lg" />
        </div>
      </div>
    </div>

    <!-- Footer Variant -->
    <div class="glass-card bg-deep-charcoal-800/50 rounded-lg p-8">
      <h3 class="text-lg font-semibold mb-4 text-cyber-teal-500 font-accent">Footer Variant</h3>
      <div class="flex flex-wrap items-center gap-8 justify-center">
        <div class="text-center">
          <p class="text-sm text-pale-blush-300 mb-2 font-primary">Small</p>
          <Logo variant="footer" size="sm" />
        </div>
        <div class="text-center">
          <p class="text-sm text-pale-blush-300 mb-2 font-primary">Medium</p>
          <Logo variant="footer" size="md" />
        </div>
      </div>
    </div>

    <!-- Hero Variant -->
    <div class="glass-primary bg-gradient-to-r from-royal-purple-600/20 to-electric-lavender-500/20 rounded-lg p-8">
      <h3 class="text-lg font-semibold mb-4 text-neon-coral-500 font-accent">Hero Variant</h3>
      <div class="flex flex-wrap items-center gap-8 justify-center">
        <div class="text-center">
          <p class="text-sm text-pale-blush-300 mb-2 font-primary">Large</p>
          <Logo variant="hero" size="lg" />
        </div>
        <div class="text-center">
          <p class="text-sm text-pale-blush-300 mb-2 font-primary">Extra Large</p>
          <Logo variant="hero" size="xl" />
        </div>
      </div>
    </div>

    <!-- Non-linked Logo -->
    <div class="glass-card rounded-lg p-8">
      <h3 class="text-lg font-semibold mb-4 text-pale-blush-50 font-accent">Non-linked Logo</h3>
      <div class="text-center">
        <p class="text-sm text-pale-blush-300 mb-4 font-primary">Use for decorative purposes</p>
        <Logo showLink={false} size="md" />
      </div>
    </div>

    <!-- Usage Examples -->
    <div class="glass-card rounded-lg p-8">
      <h3 class="text-lg font-semibold mb-4 text-pale-blush-50 font-accent">Usage Examples</h3>
      <div class="space-y-4 text-sm text-pale-blush-200 font-mono">
        <div>
          <p class="text-pale-blush-100 mb-1 font-primary">Default navigation logo:</p>
          <code class="bg-deep-charcoal-800 p-2 rounded">&lt;Logo /&gt;</code>
        </div>
        <div>
          <p class="text-pale-blush-100 mb-1 font-primary">Hero section logo:</p>
          <code class="bg-deep-charcoal-800 p-2 rounded">&lt;Logo variant="hero" size="xl" /&gt;</code>
        </div>
        <div>
          <p class="text-pale-blush-100 mb-1 font-primary">Footer logo:</p>
          <code class="bg-deep-charcoal-800 p-2 rounded">&lt;Logo variant="footer" size="sm" /&gt;</code>
        </div>
        <div>
          <p class="text-pale-blush-100 mb-1 font-primary">Decorative logo:</p>
          <code class="bg-deep-charcoal-800 p-2 rounded">&lt;Logo showLink={false} size="md" /&gt;</code>
        </div>
      </div>
    </div>
  </div>
</section> 