---
import Layout from '../layouts/Layout.astro';
import LoadingAnimation from '../components/LoadingAnimation.astro';
---

<Layout title="404 - Page Not Found | Technical PM" description="The page you're looking for couldn't be found. Navigate back to our homepage or contact us for assistance.">
  <div class="min-h-screen flex items-center justify-center relative overflow-hidden">
    <!-- Animated background particles -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="particle particle-1"></div>
      <div class="particle particle-2"></div>
      <div class="particle particle-3"></div>
      <div class="particle particle-4"></div>
      <div class="particle particle-5"></div>
    </div>

    <!-- Main content -->
    <div class="relative z-10 text-center px-4 max-w-2xl mx-auto">
      <!-- 404 Number with animation -->
      <div class="mb-8">
        <h1 class="text-8xl md:text-9xl font-bold font-accent mb-4 animate-bounce">
          <span class="bg-gradient-to-r from-royal-purple-600 via-electric-lavender-500 to-neon-coral-500 bg-clip-text text-transparent">
            404
          </span>
        </h1>
      </div>

      <!-- Error message -->
      <div class="glass-card rounded-2xl p-8 mb-8">
        <h2 class="text-2xl md:text-3xl font-semibold mb-4 font-accent">
          Oops! Page Not Found
        </h2>
        <p class="text-lg mb-6 text-pale-blush-200">
          The page you're looking for seems to have wandered off into the digital void. 
          Don't worry, even the best technical PMs get lost sometimes!
        </p>
        
        <!-- Loading animation for fun -->
        <div class="flex justify-center mb-6">
          <LoadingAnimation variant="minimal" speed="slow" showText={false} size="md" />
        </div>
      </div>

      <!-- Action buttons -->
      <div class="space-y-4 md:space-y-0 md:space-x-4 md:flex md:justify-center">
        <button
          onclick="history.back()"
          class="glass-button px-8 py-3 rounded-xl font-semibold transition-all duration-300 hover:scale-105"
        >
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Go Back
          </span>
        </button>
        
        <a
          href="/"
          class="glass-button px-8 py-3 rounded-xl font-semibold transition-all duration-300 hover:scale-105 inline-block"
        >
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            Home
          </span>
        </a>
        
        <button
          onclick="document.getElementById('contact-modal').classList.remove('hidden'); return false;"
          class="glass-button px-8 py-3 rounded-xl font-semibold transition-all duration-300 hover:scale-105"
        >
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
            Contact
          </span>
        </button>
      </div>

      <!-- Helpful links -->
      <div class="mt-12 glass-card rounded-xl p-6">
        <h3 class="text-lg font-semibold mb-4 font-accent">Looking for something specific?</h3>
        <div class="grid md:grid-cols-2 gap-4 text-sm">
          <a href="/blog" class="hover:text-electric-lavender-300 transition-colors duration-200">
            üìù Read our latest blog posts
          </a>
          <a href="/brand-strategy" class="hover:text-electric-lavender-300 transition-colors duration-200">
            üéØ Learn about our brand strategy
          </a>
          <a href="/seo-status" class="hover:text-electric-lavender-300 transition-colors duration-200">
            üìä Check our SEO status
          </a>
          <a href="/#services" class="hover:text-electric-lavender-300 transition-colors duration-200">
            üöÄ Explore our services
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  /* Animated particles */
  .particle {
    position: absolute;
    border-radius: 50%;
    pointer-events: none;
    animation: float 8s ease-in-out infinite;
    filter: blur(1px);
  }

  .particle-1 {
    width: 20px;
    height: 20px;
    background: radial-gradient(circle, rgba(108, 62, 166, 0.6), rgba(108, 62, 166, 0.1));
    top: 20%;
    left: 10%;
    animation-delay: 0s;
  }

  .particle-2 {
    width: 16px;
    height: 16px;
    background: radial-gradient(circle, rgba(181, 126, 220, 0.5), rgba(181, 126, 220, 0.1));
    top: 60%;
    right: 15%;
    animation-delay: 2s;
  }

  .particle-3 {
    width: 12px;
    height: 12px;
    background: radial-gradient(circle, rgba(14, 194, 164, 0.5), rgba(14, 194, 164, 0.1));
    bottom: 30%;
    left: 20%;
    animation-delay: 4s;
  }

  .particle-4 {
    width: 18px;
    height: 18px;
    background: radial-gradient(circle, rgba(255, 79, 88, 0.5), rgba(255, 79, 88, 0.1));
    top: 40%;
    right: 25%;
    animation-delay: 6s;
  }

  .particle-5 {
    width: 14px;
    height: 14px;
    background: radial-gradient(circle, rgba(243, 230, 248, 0.5), rgba(243, 230, 248, 0.1));
    bottom: 20%;
    right: 10%;
    animation-delay: 1s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px) rotate(0deg) scale(1);
      opacity: 0.6;
    }
    33% {
      transform: translateY(-30px) rotate(120deg) scale(1.1);
      opacity: 0.8;
    }
    66% {
      transform: translateY(-15px) rotate(240deg) scale(0.9);
      opacity: 1;
    }
  }

  /* Enhanced glass card for 404 */
  .glass-card {
    background: linear-gradient(135deg, 
      rgba(255, 255, 255, 0.12) 0%,
      rgba(255, 255, 255, 0.08) 50%,
      rgba(255, 255, 255, 0.05) 100%);
    backdrop-filter: blur(24px) saturate(180%);
    -webkit-backdrop-filter: blur(24px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.25);
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.3),
      inset 0 -1px 0 rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
  }

  .glass-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
      transparent 0%, 
      rgba(255, 255, 255, 0.1) 50%, 
      transparent 100%);
    transition: left 0.6s ease-in-out;
    pointer-events: none;
  }

  .glass-card:hover::before {
    left: 100%;
  }

  /* Light theme adjustments */
  [data-theme="light"] .glass-card {
    background: linear-gradient(135deg, 
      rgba(255, 255, 255, 0.8) 0%,
      rgba(255, 255, 255, 0.6) 50%,
      rgba(255, 255, 255, 0.4) 100%);
    border: 1px solid var(--border-primary);
    box-shadow: var(--shadow-secondary);
  }

  [data-theme="light"] .glass-card::before {
    background: linear-gradient(90deg, 
      transparent 0%, 
      rgba(0, 0, 0, 0.05) 50%, 
      transparent 100%);
  }

  /* Enhanced button styles */
  .glass-button {
    background: linear-gradient(135deg, 
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0.08) 50%,
      rgba(255, 255, 255, 0.06) 100%);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.25);
    box-shadow: 
      0 6px 24px rgba(0, 0, 0, 0.12),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    position: relative;
    overflow: hidden;
    color: white;
  }

  .glass-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
      transparent 0%, 
      rgba(255, 255, 255, 0.15) 50%, 
      transparent 100%);
    transition: left 0.5s ease;
    pointer-events: none;
  }

  .glass-button:hover::before {
    left: 100%;
  }

  .glass-button:hover {
    background: linear-gradient(135deg, 
      rgba(255, 255, 255, 0.15) 0%,
      rgba(255, 255, 255, 0.12) 50%,
      rgba(255, 255, 255, 0.09) 100%);
    border-color: rgba(255, 255, 255, 0.35);
    box-shadow: 
      0 12px 36px rgba(0, 0, 0, 0.18),
      inset 0 1px 0 rgba(255, 255, 255, 0.4);
  }

  /* Light theme button adjustments */
  [data-theme="light"] .glass-button {
    background: var(--accent-primary);
    color: white;
    border: none;
  }

  [data-theme="light"] .glass-button:hover {
    background: var(--accent-secondary);
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .glass-card {
      padding: 1.5rem;
      margin: 1rem;
    }
    
    .glass-button {
      width: 100%;
      margin-bottom: 0.5rem;
    }
  }
</style> 